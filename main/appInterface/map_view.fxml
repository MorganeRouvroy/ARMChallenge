<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet ControllerStyle.css?>
<?import com.lynden.gmapsfx.GoogleMapView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="700.0" stylesheets="@ControllerStyle.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.appInterface.MapController">
    <left>
        <VBox alignment="CENTER" prefWidth="300" spacing="35">
            <children>
                <Button fx:id="nearestHospital" onAction="#searchAction" styleClass="button" stylesheets="@ControllerStyle.css" text="Find Nearest Hospital" />
                <HBox alignment="CENTER">
                    <children>
                        <TextField fx:id="radiusSelection" onAction="#setRangeField" prefHeight="80" prefWidth="150" promptText="Choose a radius" styleClass="label" stylesheets="@ControllerStyle.css" />
                        <VBox alignment="CENTER">
                            <children>
                                <CheckBox fx:id="hospital" onAction="#searchAction" prefWidth="140" styleClass="button" stylesheets="@ControllerStyle.css" text="Find Hospital" textAlignment="CENTER" />
                                <CheckBox fx:id="school" onAction="#searchAction" prefWidth="140" styleClass="button" stylesheets="@ControllerStyle.css" text="Find School" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <CheckBox fx:id="heatMap" onAction="#changeHeatmapVisibility" styleClass="button" stylesheets="@ControllerStyle.css" text="HeatMap" />
                <Button fx:id="Clear" onAction="#clearMap" styleClass="button" stylesheets="@ControllerStyle.css" text="Clear Map" />
            </children>
        </VBox>
    </left>
    <center>
        <!-- Map -->
        <GoogleMapView fx:id="mapView" layoutX="100.0" layoutY="-100.0" prefHeight="400.0" prefWidth="500.0" AnchorPane.bottomAnchor="5.0" />
    </center>
    <bottom>
        <TextField fx:id="something" alignment="CENTER" onAction="#setRangeField" styleClass="label" stylesheets="@ControllerStyle.css" text="Display information">
        </TextField>
    </bottom>
</BorderPane>
