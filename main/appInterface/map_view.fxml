<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet ControllerStyle.css?>

<?import com.lynden.gmapsfx.GoogleMapView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="500.0" prefWidth="800.0" stylesheets="@ControllerStyle.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.appInterface.MapController">

    <center>

        <HBox>
            <VBox styleClass="left" stylesheets="@ControllerStyle.css" HBox.hgrow="NEVER">
                <ToggleButton fx:id="showHide" onAction="#showHide" prefWidth="20" styleClass="button"
                              stylesheets="@ControllerStyle.css" textAlignment="CENTER"/>
            </VBox>

            <StackPane HBox.hgrow="ALWAYS">
                <SplitPane fx:id="SplitPane" dividerPositions="0.3">
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                                HBox.hgrow="ALWAYS">
                        <VBox alignment="CENTER" prefWidth="300" spacing="35"
                              stylesheets="@ControllerStyle.css">
                            <Separator visible="false"/>
                            <Button alignment="CENTER"
                                    onAction="#nearestHospital" prefHeight="20"
                                    styleClass="button-raised" stylesheets="@ControllerStyle.css"
                                    text="Find Nearest Hospital"/>
                            <Separator prefWidth="200.0"/>

                            <HBox>
                                <GridPane alignment="CENTER" vgap="20" HBox.hgrow="ALWAYS">
                                    <TextField fx:id="radiusSelection" alignment="CENTER"
                                               onAction="#setRangeField"
                                               promptText="Choose a radius"
                                               styleClass="text-field, text-area"
                                               stylesheets="@ControllerStyle.css"
                                               GridPane.columnIndex="0" GridPane.rowIndex="0"
                                               HBox.hgrow="ALWAYS"/>
                                    <HBox alignment="CENTER" GridPane.columnIndex="0"
                                          GridPane.rowIndex="1" HBox.hgrow="ALWAYS">
                                        <Button onAction="#findHospital"
                                                prefWidth="140" styleClass="button-raised"
                                                stylesheets="@ControllerStyle.css"
                                                text="Find Hospital" textAlignment="CENTER"/>
                                        <Button onAction="#findSchool"
                                                prefWidth="140" styleClass="button-raised"
                                                stylesheets="@ControllerStyle.css"
                                                text="Find School"/>
                                    </HBox>
                                </GridPane>
                            </HBox>

                            <Separator prefWidth="200.0"/>

                            <HBox>
                                <GridPane alignment="CENTER" vgap="20" HBox.hgrow="ALWAYS">
                                    <TextField fx:id="location" alignment="CENTER"
                                               promptText="Search for location:"
                                               styleClass="text-field, text-area"
                                               stylesheets="@ControllerStyle.css"
                                               GridPane.columnIndex="0" GridPane.rowIndex="0"
                                               HBox.hgrow="ALWAYS"/>
                                    <VBox alignment="CENTER" GridPane.columnIndex="0"
                                          GridPane.rowIndex="1" HBox.hgrow="ALWAYS">
                                        <Button onAction="#searchForLocation"
                                                prefWidth="140" styleClass="button-raised"
                                                stylesheets="@ControllerStyle.css"
                                                text="Search" textAlignment="CENTER"/>
                                    </VBox>
                                </GridPane>
                            </HBox>

                            <Separator prefWidth="200.0"/>
                            <CheckBox alignment="CENTER"
                                      onAction="#changeHeatmapVisibility" styleClass="check-box"
                                      stylesheets="@ControllerStyle.css" text="HeatMap"/>
                            <Separator prefWidth="200.0"/>
                            <Button alignment="CENTER" contentDisplay="CENTER"
                                    onAction="#clearMap" styleClass="button"
                                    stylesheets="@ControllerStyle.css" text="Clear Map"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <Separator visible="false"/>
                        </VBox>
                    </ScrollPane>
                    <AnchorPane fx:id="mapPane1">
                        <!-- Map -->
                        <GoogleMapView fx:id="mapView" maxHeight="Infinity" maxWidth="Infinity"
                                       AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </AnchorPane>
                </SplitPane>
                <AnchorPane fx:id="mapPane2" visible="false"/>
            </StackPane>
        </HBox>

    </center>

   <bottom>
       <VBox alignment="CENTER" styleClass="left" stylesheets="@ControllerStyle.css">
           <Label fx:id="display" prefHeight="60" wrapText="true" styleClass="label" stylesheets="@ControllerStyle.css"
                  text="Display information" textAlignment="CENTER" BorderPane.alignment="CENTER"/>
       </VBox>
   </bottom>

</BorderPane>
